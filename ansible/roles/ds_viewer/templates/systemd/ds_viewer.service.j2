[Unit]
Description=DsViewer
Wants=network.target
After=network.target

[Service]
Type=simple
WorkingDirectory={{ ds_viewer.dir }}
ExecStart={{ server.apps_dir}}/rbenvInit.sh rails server -b 0.0.0.0 -p {{ ds_viewer.http_port }} -e production -d
ExecStartPost={{ server.apps_dir}}/check_port.sh {{ ds_viewer.http_port }} 60 5
User={{ server.user }}
Restart=always

[Install]
WantedBy=multi-user.target